@using MvcPL.Models
@model FileViewModel
@{
    ViewBag.Title = "Edit";
}

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Edit file</legend>
        <div class="col-sm-5">
            <div class="form-group">
                <div class="col-sm-12">
                    <p>@Html.LabelFor(model => model.FileName):</p>
                    @Html.TextBoxFor(model => model.FileName, new { @class = "form-control", @placeholder = @Model.FileName })
                    @Html.ValidationMessageFor(model => model.FileName)
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-12" style="margin-top: 10px">
                    <p>@Html.LabelFor(model => model.Description):</p>
                    @Html.TextAreaFor(model => model.Description, new {@class = "form-control", rows = 4, @placeholder = @Model.Description})
                    @Html.ValidationMessageFor(model => model.Description)
                </div>
            </div>
                <div class="form-group">
                    <div class="col-sm-12" style="margin-top: 20px">
                        <button type="submit" class="btn btn-default">Edit</button>
                    </div>
                </div>
            </div>
    </fieldset>
}
@section Scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}

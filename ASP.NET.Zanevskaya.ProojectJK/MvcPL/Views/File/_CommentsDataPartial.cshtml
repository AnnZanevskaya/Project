@using MvcPL.Models
@model CommentViewModel
@{
    Layout = null;
    var options = new AjaxOptions()
    {
        UpdateTargetId = "tabledata",
        Url = Url.Action("CommentsDataPartial"),
        HttpMethod = "POST"
    };
}
@*@using (Ajax.BeginForm(options))*@
    @using (Html.BeginForm("CommentsDataPartial", "File"))
    {
        <fieldset class="text-center">
            @Html.AntiForgeryToken()
            @Html.ValidationSummary()
            <legend>Add Comment</legend>
            <div class="form-group">
                <div class="col-lg-6 col-sm-6 col-xs-6 col-centered">
                    @Html.TextAreaFor(model => model.Messange, new { @class = "form-control", rows = "4", @placeholder = "Your Comment" })
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Add" class="btn btn-default" />
            </div>
        </fieldset>
    }
    



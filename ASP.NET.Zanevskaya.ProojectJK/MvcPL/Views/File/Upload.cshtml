@using MvcPL.Infrastructure.Helpers
@using MvcPL.Models
@model FileViewModel

@{
    ViewBag.Title = "Upload";
}
<fieldset>
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()
    <legend>Create file</legend>
    <form action="@Url.Action("Upload")" method="post" enctype="multipart/form-data">
        <div class="col-sm-5">
            <div class="form-group">
                <div class="col-sm-12">
                    <label for="InputFile">File input</label>
                    <input type="file" id="InputFile" name="file" />
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-12" style="margin-top: 10px">
                    <p>@Html.LabelFor(model => model.FileName):</p>
                    @Html.TextBoxFor(model => model.FileName, new { @class = "form-control", @placeholder = "Title" })
                    @Html.ValidationMessageFor(model => model.FileName)
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-12" style="margin-top: 10px">
                    <p>@Html.LabelFor(model => model.Description):</p>
                    @Html.TextAreaFor(model => model.Description, new { @class = "form-control", rows = "4", @placeholder = "Description" })
                    @Html.ValidationMessageFor(model => model.Description)
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-12" style="margin-top: 20px">
                    <button type="submit" class="btn btn-default">Create</button>
                </div>
            </div>
        </div>
    </form>
</fieldset>


@section Scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}


@model IEnumerable<MvcPL.Models.FileViewModel>

@{
    ViewBag.Title = "FileView";
}


    @if (Model.Any())
    { 
            <table class="table">
                <thead>
                    <tr>
                        <th>File type</th>
                        <th>Title</th>
                        <th>Creation time</th>
                    </tr>
                </thead>
                @foreach (var item in Model)
                {
                    <tbody>
                        <tr>
                            <td>@item.FileType.Split('/')[0]</td>
                            <td>@item.FileName</td>
                            <td>@item.CreationTime</td>
                            <td><input class="btn btn-primary btn-xs right" type="submit" value="Details" formmethod="get" onclick="location.href = '@Url.Action("Content", "File", new {@item.Id})'" /></td>
                            <td><input class="btn btn-warning btn-xs right" type="submit" value="Edit" formmethod="get" onclick="location.href = '@Url.Action("EditFile", "File", new {@item.Id})'" /></td>
                            <td><input class="btn btn-danger btn-xs right" type="submit" value="Delete" formmethod="get" onclick="location.href = '@Url.Action("DeleteFile", "File", new {@item.Id})'" /></td>
                        </tr>
                    </tbody>
                }
            </table>
    }
    else
    {
        <div class="col-lg-12 col-mg-12 col-sm-12 col-xs-12 text-center">
            <h3 class="text-info">No Files to show yet...</h3>
        </div>
    }
